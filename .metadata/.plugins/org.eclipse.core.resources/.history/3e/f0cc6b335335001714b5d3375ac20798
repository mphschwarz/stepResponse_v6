      }

      @Override
  	public void actionPerformed(ActionEvent e) {
    	  if (e.getActionCommand().equals("ordList")) {
    		  int i = comboBox.getSelectedIndex();
    		  System.out.println("Index: " + i);
    	  }

  	}

 }